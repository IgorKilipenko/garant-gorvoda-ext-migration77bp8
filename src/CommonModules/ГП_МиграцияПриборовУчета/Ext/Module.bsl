// Устарела. Изменился алгоритм переноса счетчиков по среднему
//
// Гарант+ Килипенко 03.10.2024 [F00229366] создание и установка счетчиков с методом по среднему ++
//
// Параметры:
//  ДатаАктуальности - Дата, Неопределено
// Возвращаемое значение:
//  - Структура
//      * Успех - Булево
//      * ТекстСообщения - Строка, Неопределено
//      * СозданныеЭлементы - Массив из СправочникСсылка.КВП_Счетчики
Функция СоздатьСчетчикиПоСреднемуМетодуРасчета(Знач ДатаАктуальности = Неопределено) Экспорт
    РезультатФункции = Новый Структура("Успех, СозданныеЭлементы, ТекстСообщения", Истина, Новый Массив);

    ДанныеДляЗаполнения = ПолучитьДанныеДляСозданияСчетчиковПоСреднему(ДатаАктуальности);

    Если ДанныеДляЗаполнения.Количество() = 0 Тогда
        Возврат РезультатФункции;
    КонецЕсли;

    НачатьТранзакцию();
    Попытка
        Для Каждого СтрокаДанных Из ДанныеДляЗаполнения Цикл
            ПараметрыЗаполнения = Новый Структура("Услуга, Наименование, Комментарий, ИдентификаторЛС");
            ПараметрыЗаполнения.Услуга = СтрокаДанных.Услуга;
            ПараметрыЗаполнения.Наименование = Строка(СтрокаДанных.ЛицевойСчет);
            ПараметрыЗаполнения.ИдентификаторЛС = Строка(СтрокаДанных.ИдентификаторЛС);
            ПараметрыЗаполнения.Комментарий = СтрокаДанных.КонтрагентНаименование;

            СозданныйЭлементСсылка = СоздатьНовыйСчетчикПоСреднемуМетодуРасчета(ПараметрыЗаполнения);
            РезультатФункции.СозданныеЭлементы.Добавить(СозданныйЭлементСсылка);
        КонецЦикла;
        ЗафиксироватьТранзакцию(); // Записано успешно
    Исключение
        ОтменитьТранзакцию();

        ОбщаяЧастьСообщения = "Ошибка при создании счетчиков.";
        СтруктураОшибки = ГП_МиграцияОбщегоНазначения.ЗаписатьОшибкуВЖурнал(
                ОбщаяЧастьСообщения, ИнформацияОбОшибке(), Ложь, Истина);

        РезультатФункции.Успех = Ложь;
        РезультатФункции.ТекстСообщения = СтрШаблон(
                "%1
                |Информация об ошибке: %2",
                ОбщаяЧастьСообщения,
                СтруктураОшибки.КраткоеПредставлениеОшибки);

        РезультатФункции.СозданныеЭлементы.Очистить();
    КонецПопытки;

    Возврат РезультатФункции;
КонецФункции // Гарант+ Килипенко 03.10.2024 [F00229366] создание и установка счетчиков с методом по среднему --

// Устарела. Требует рефакторинг: В текущей реализации не выполняется проверка на ранее созданные счетчики.
//  Т.е. при повторном выполнении - будут созданы дубли счетчиков если существующие не установлены
//
// Выполняет создание виртуальных счетчиков для л/с для которых не установлены счетчики для назначенных услуг ХВС, ГВС
// Параметры:
//  ДатаАктуальности - Дата, Неопределено
// Создает новые виртуальные счетчики для л/с где нет установленных счетчиков
// Возвращаемое значение:
//  - Структура
//      * Успех - Булево
//      * СозданныеЭлементы - Массив из СправочникСсылка.КВП_Счетчики
Функция СоздатьВиртуальныеСчетчикиПоСреднемуДляЛСБезСчетчиков(Знач ДатаАктуальности = Неопределено) Экспорт
    РезультатФункции = Новый Структура("Успех, СозданныеЭлементы, ТекстСообщения", Истина, Новый Массив);

    ДанныеДляСоздания = ПолучитьДанныеДляСозданияВиртуальныхСчетчиковПоСреднемуДляЛСБезСчетчиков(ДатаАктуальности);

    // Создание счетчиков
    НачатьТранзакцию();
    Попытка
        Для Каждого СтрокаДанных Из ДанныеДляСоздания Цикл
            // Игнорирование для объектов Плата за ХВС ОИ
            Если СтрокаДанных.ЭтоПлатаЗаХолодноеВодоснабжениеОИ = Истина Тогда
                Продолжить;
            КонецЕсли;

            // Игнорирование для объектов Негативное воздействие
            Если СтрокаДанных.ЭтоНегативноеВоздействиеЦСВ = Истина Тогда
                Продолжить;
            КонецЕсли;

            // Игнорирование для объектов Потри воды
            Если СтрокаДанных.ЭтоПотериВоды = Истина Тогда
                Продолжить;
            КонецЕсли;

            СчетчикОбъект = ГП_ПриборыУчета.НовыйВиртуальныйСчетчик(
                    СтрокаДанных, РезультатФункции.СозданныеЭлементы.Количество() + 1);
            СчетчикОбъект.Наименование = СтрШаблон("[[По сред.]] %1", СчетчикОбъект.Наименование);

            Если ПустаяСтрока(СтрокаДанных.ИдентификаторЛС) = Ложь Тогда
                СчетчикОбъект.ГП_Комментарий = СтрШаблон("(ид: (%1))", СтрокаДанных.ИдентификаторЛС);
            КонецЕсли;

            СчетчикОбъект.Записать();
            РезультатФункции.СозданныеЭлементы.Добавить(СчетчикОбъект.Ссылка);
        КонецЦикла;

        ЗафиксироватьТранзакцию();

    Исключение
        ОтменитьТранзакцию();

        ОбщаяЧастьСообщения = "Ошибка при создании счетчиков";
        СтруктураОшибки = ГП_МиграцияОбщегоНазначения.ЗаписатьОшибкуВЖурнал(
                ОбщаяЧастьСообщения, ИнформацияОбОшибке(), Ложь, Истина);

        РезультатФункции.Успех = Ложь;
        РезультатФункции.ТекстСообщения = СтрШаблон(
                "%1
                |Информация об ошибке: %2",
                ОбщаяЧастьСообщения,
                СтруктураОшибки.КраткоеПредставлениеОшибки);

        РезультатФункции.СозданныеЭлементы.Очистить();
    КонецПопытки;

    Возврат РезультатФункции;
КонецФункции

