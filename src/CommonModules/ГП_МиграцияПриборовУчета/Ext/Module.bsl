        |		ПО ВТ_НазначенныеНачисленияЛС.ЛицевойСчет.Идентификатор = ВТ_ЗданияБП77.ИдентификаторЛС
        |			И (ВТ_ЗданияБП77.ЭтоНегативноеВоздействиеЦСВ = ЛОЖЬ)
        |			И (ВТ_ЗданияБП77.ЭтоПлатаЗаХолодноеВодоснабжениеОИ = ЛОЖЬ)
        |			И (ВТ_ЗданияБП77.ЭтоПотериВоды = ЛОЖЬ)
        |ГДЕ
        |	НЕ (ВТ_НазначенныеНачисленияЛС.ЛицевойСчет, ВТ_НазначенныеНачисленияЛС.Услуга) В
        |				(ВЫБРАТЬ
        |					Т.ЛицевойСчет,
        |					Т.Услуга
        |				ИЗ
        |					ВТ_УстановленныеСчетчикиВодоснабженияЛС КАК Т)
        |;
        |
        |////////////////////////////////////////////////////////////////////////////////
        |ВЫБРАТЬ РАЗРЕШЕННЫЕ
        |	ВТ_ДанныеДляСоздания.ЛицевойСчет КАК ЛицевойСчет,
        |	ВТ_ДанныеДляСоздания.ИдентификаторЛС КАК ИдентификаторЛС,
        |	ВТ_ДанныеДляСоздания.Помещение КАК Помещение,
        |	ВТ_ДанныеДляСоздания.Здание КАК Здание,
        |	ВТ_ДанныеДляСоздания.Наименование КАК Наименование,
        |	ВТ_ДанныеДляСоздания.Услуга КАК Услуга,
        |	ВТ_ДанныеДляСоздания.КонтрагентКод КАК КонтрагентКод,
        |	ВТ_ДанныеДляСоздания.ОбъектАбонентаКод КАК ОбъектАбонентаКод,
